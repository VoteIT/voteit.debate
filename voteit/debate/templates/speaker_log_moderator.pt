<tal:main xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.debate">
<tal:iterate repeat="(pn, timelog) active_list.speaker_log.items()">
    <li>
        <div>
            <span>${pn}:</span>
            <span tal:replace="structure number_to_profile_tag[pn]">Profile link</span>
        </div>
        <div>
            <b>${len(timelog)}</b> - ${sum(timelog)} <span i18n:translate="">sec</span>
            <a href="${request.resource_url(context, 'edit_speaker_log',
                                           query = {'speaker_list': active_list.name, 'speaker': pn})}">edit</a>
        </div>
    </li>
</tal:iterate>
</tal:main>
