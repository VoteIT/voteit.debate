<tal:main xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="voteit.debate">
    <tal:active_list condition="active_list">
        <span id="state-area" class="meta">
            <span class="state">
                <span tal:attributes="class active_list.state == 'open' and 'iconpadding icon ongoing' or 'iconpadding icon closed'">
                    ${active_list.get_state_title()}
                </span>
            </span>
        </span>
        <h1 id="agenda_item_title" class="icon">${active_list.title}</h1>
        <ul id="speaker-list-items">
            <li class="first" tal:condition="active_speaker">
                <div class="list-status">
                    <span>&nbsp;</span>
                </div>
                <div class="user">
                    <img tal:replace="structure active_speaker.get_image_tag(size = 40)">
                    <span class="user_fullname">${active_speaker.title}</span>
                    <div class="clear"><!-- --></div>
                </div>
                <div class="clear"><!-- --></div>
            </li>
            <tal:iterate repeat="user speaker_profiles">
                <li>
                    <div class="list-status">
                        <span>${get_user_list_number(user.userid)}</span>
                    </div>
                    <div class="user">
                        <img tal:replace="structure user.get_image_tag(size = 40)">
                        <span class="user_fullname">${user.title}</span>
                        <div class="clear"><!-- --></div>
                    </div>
                    <div class="clear"><!-- --></div>
                </li>
            </tal:iterate>
        </ul>
    </tal:active_list>
    <tal:not_active condition="not active_list">
        <h1 i18n:translate="">No list currently active</h1>
    </tal:not_active>
    <div class="meta" id="status" style="display: none;" i18n:translate="">Error: Connection timeout. Will try again.</div>

</tal:main>
