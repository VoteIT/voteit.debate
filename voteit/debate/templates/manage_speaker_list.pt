<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="load: ${api.template_dir}content.pt"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.debate">
<body>
    <h2 metal:fill-slot="page_heading" id="page_heading" i18n:translate="">Manage speaker list</h2>
    <div id="speaker_list_controls" metal:fill-slot="content">

        <ul>
            <li tal:repeat="sl context_lists">
                <a href="${request.resource_url(context, 'speaker_list_action', query = {'action': 'set', 'name': sl.name})}"
                   tal:attributes="class sl.name == active_list.name and 'selected' or ''">${sl.title}</a>
                <a href="${request.resource_url(context, 'speaker_list_action', query = {'action': 'remove', 'name': sl.name})}"
                   i18n:translate="">Delete</a>
            </li>
            <li><a href="${request.resource_url(context, 'speaker_list_action', query = {'action': 'add'})}"
                   i18n:translate="">&raquo; Add a new list</a></li>
        </ul>

        <tal:form replace="structure add_form">Participant number add form</tal:form>

        <a href="javascript:" class="buttonize" id="start_speaker" i18n:translate="">Start</a>
        <a href="javascript:" class="buttonize" id="pause_speaker" i18n:translate="">Pause</a>
        <a href="javascript:" class="buttonize" id="finished_speaker" i18n:translate="">Finished speaking</a>
        <a href="javascript:" class="buttonize" id="quickstart_next_speaker" i18n:translate="">Quickstart next</a>

        <a id="meeting_url" style="display: none" href="${api.meeting_url}"></a>
    </div>
    
    <div metal:fill-slot="columns">
        <div id="left"></div>
        <div id="right"></div>
    </div>
</body>
</html>
