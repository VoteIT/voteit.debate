<tal:main xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="controls controls|False"
      i18n:domain="voteit.debate">
<div class="list-group-item speaker-item" data-speaker-pn="">
  <div class="row">
    <div class="col-xs-2">
      <!-- This will cause active speaker, if in list too, to display an empty circle... -->
      <span class="list-status-circle">
        <span data-speaker="listno">
        </span>
        <!--
        <span class="glyphicon glyphicon-lock"></span>
        <span class="glyphicon glyphicon-bullhorn"></span>
        -->
      </span>
    </div>
    <div class="col-xs-${controls and '8' or '10'}">
      <div data-speaker="fullname">(Name and userid)</div>
      <span data-speaker="pn">pn:</span>
      <tal:total condition="controls">
        Total: <span data-speaker="total"></span>
      </tal:total>

    </div>
    <div tal:condition="controls" class="col-xs-2"
         data-speaker="moderator_controls">
      <a href="javascript:" data-list-action="start">
        <span class="glyphicon glyphicon-play"></span>
      </a>
      <a href="javascript:" data-list-action="remove">
        <span class="glyphicon glyphicon-remove text-danger"></span>
      </a>
    </div>
  </div>
</div>
</tal:main>
