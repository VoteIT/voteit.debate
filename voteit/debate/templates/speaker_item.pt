<li>
    <div class="speaker_name">
        <span tal:content="'%s:' % pn">Number</span>
        <span tal:content="structure user_info">Name and userid</span>
    </div>
    <div class="speaker_controls">
        <span class="time_spoken"></span>
        <a class="promote_start_speaker"
           href="javascript:">start</a>
        <a class="remove_speaker"
           href="${request.resource_url(api.meeting, '_remove_speaker', query = {'pn': pn})}">remove</a>
    </div>
    <input type="hidden" name="speaker_id" value="${pn}" />
</li>
